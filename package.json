{
  "name": "syntalys-crm",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron-dev": "concurrently \"next dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-build": "next build && electron-builder",
    "build-installer": "npm run build && electron-builder --win --publish never"
  },
  "homepage": "./",
  "main": "public/electron.js",
  "dependencies": {
    "@supabase/supabase-js": "^2.49.2",
    "next": "^15.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "eslint": "^8",
    "eslint-config-next": "^15.1.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.syntalys.crm",
    "productName": "Syntalys CRM",
    "nodeGypRebuild": false,
    "npmRebuild": false,
    "files": [
      "public/**/*",
      ".next/**/*",
      "node_modules/**/*",
      "!**/node_modules/@img",
      "!**/node_modules/@img/**",
      "!**/node_modules/sharp",
      "!**/node_modules/sharp/**",
      "!**/node_modules/*/{CHANGELOG.md,README.md,readme.md}",
      "!**/*.map",
      "package.json",
      "next.config.ts"
    ],
    "directories": {
      "buildResources": "public",
      "output": "release"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/logos/syntalys-desktop-icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Syntalys CRM"
    }
  }
}
